{
  "name": "bber",
  "version": "0.1.0-alpha.1",
  "description": "A command line epub maker.",
  "main": "./lib/cli.jsx",
  "scripts": {
    "start": "./node_modules/.bin/babel-node ./lib/cli.jsx --presets es2015,stage-0",
    "lint": "./node_modules/.bin/eslint ./lib/cli.jsx lib/*.jsx lib/**/*.jsx || true",
    "ava": "./node_modules/.bin/ava --verbose || true",
    "test": "npm run ava && npm run lint",
    "build": "./node_modules/.bin/babel --presets es2015,stage-0 -d dist/ lib/",
    "prepublish": "npm run build",
    "bump": "npm version prerelease",
    "preversion": "npm test",
    "version": "npm run build && git add -A"
  },
  "bin": {
    "bber": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/triplecanopy/b-ber-creator.git"
  },
  "author": "Maxwell Simmer",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "babel-eslint": "^7.1.1",
    "bber-editor": "git+https://github.com/triplecanopy/dillinger.git",
    "bunyan": "^1.8.5",
    "bunyan-format": "^0.2.1",
    "copy-dir": "^0.3.0",
    "decompress": "^4.0.0",
    "epub-zipper": "^1.2.3",
    "eslint": "^3.10.2",
    "eslint-plugin-react": "^6.7.1",
    "express": "^4.14.0",
    "fs-extra": "^0.30.0",
    "gulp": "^3.9.1",
    "gulp-sass": "^3.1.0",
    "htmlparser2": "^3.9.2",
    "image-size": "^0.5.0",
    "jshint": "^2.9.3",
    "layouts": "^0.13.2",
    "lodash": "^4.17.4",
    "markdown-it": "^7.0.1",
    "markdown-it-container": "^2.0.0",
    "markdown-it-front-matter": "^0.1.2",
    "mime-types": "^2.1.13",
    "mobi-zipper": "^0.1.2",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "opn": "^4.0.2",
    "postcss": "^5.2.6",
    "recursive-readdir": "^2.1.0",
    "request": "^2.79.0",
    "serve-index": "^1.8.0",
    "vinyl": "^1.2.0",
    "xml2js": "^0.4.17",
    "yamljs": "^0.2.8",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.18.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.14.0",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^11.2.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.4.1",
    "tap-spec": "^4.1.1"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "source": [
      "**/*.{js,jsx,es6}"
    ],
    "match": [],
    "concurrency": 5,
    "failFast": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
