{
    "name": "@canopycanopycanopy/b-ber",
    "version": "0.1.0-alpha.de5a155f",
    "private": true,
    "license": "GPL-3.0-or-later",
    "engines": {
        "node": ">= 4.x <= 9.x",
        "npm": ">= 2.x <= 6.x",
        "yarn": ">=0.27.5 || <= 1.12.x"
    },
    "scripts": {
        "watch": "lerna run --parallel watch",
        "lint": "ls ./packages | xargs -I {} ./node_modules/.bin/eslint ./packages/{}/src/**/{*.js,*.jsx}",
        "lint.changed": "DIFF=`git diff-index --name-only HEAD | grep -E \"(.*).(jsx?|scss)$\"`; if [ \"$DIFF\" ]; then ./node_modules/.bin/eslint $DIFF; fi",
        "flush.lock": "ls ./packages | xargs -I {} rimraf ./packages/{}/yarn.lock",
        "flush.modules": "ls ./packages | xargs -I {} rimraf ./packages/{}/node_modules",
        "flush.rebuild": "lerna exec yarn && lerna bootstrap",
        "flush": "yarn flush.lock && yarn flush.modules && yarn flush.rebuild",
        "test": "rimraf ./coverage && yarn lint && yarn pretty && yarn jest --collectCoverage=true",
        "build": "yarn test && lerna run build",
        "prettier.check": "./node_modules/.bin/eslint --print-config . | ./node_modules/.bin/eslint-config-prettier-check"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint.changed",
            "pre-push": "yarn lint && yarn jest"
        }
    },
    "devDependencies": {
        "ajv": "^6.4.0",
        "babel-cli": "^6.14.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.0.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "coveralls": "^3.0.1",
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^15.1.0",
        "eslint-config-airbnb-base": "^12.0.0",
        "eslint-config-prettier": "^3.3.0",
        "eslint-plugin-babel": "^4.1.2",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jsx-a11y": "^5.1.1",
        "eslint-plugin-prettier": "^3.0.0",
        "eslint-plugin-react": "^7.3.0",
        "fs-extra": "^6.0.1",
        "husky": "^1.1.3",
        "istanbul": "^0.4.5",
        "istanbul-api": "1.2.2",
        "istanbul-reports": "1.1.4",
        "jest": "^22.4.3",
        "jest-environment-jsdom": "^22.4.3",
        "jest-environment-jsdom-global": "^1.0.3",
        "jest-extended": "^0.7.1",
        "jsdoc": "^3.4.3",
        "jsdoc-strip-async-await": "^0.1.0",
        "lerna": "^2.1.2",
        "minami": "^1.2.3",
        "mocha": "^3.2.0",
        "prettier": "^1.15.1",
        "rimraf": "^2.6.2",
        "sinon": "^3.2.1",
        "sinon-chai": "^2.13.0"
    },
    "dependencies": {}
}
