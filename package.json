{
    "name": "@canopycanopycanopy/b-ber",
    "version": "0.1.6",
    "private": true,
    "license": "GPL-3.0-or-later",
    "engines": {
        "node": ">= 6.x <= 10.x",
        "npm": ">= 5.x <= 6.x"
    },
    "scripts": {
        "watch": "lerna run watch --no-sort --stream --concurrency 999",
        "build": "lerna run build --stream",
        "check:code": "eslint --ignore-path .gitignore --ignore-path .prettierignore --ext .js,.jsx .",
        "check:other": "npm run prettier -- --check",
        "check": "npm-run-all -p lint:code lint:other",
        "format:code": "npm run check:code -- --fix",
        "format:other": "npm run prettier -- --write",
        "prettier": "prettier \"**/*.{md,scss,yaml,yml}\"",
        "test": "npm-run-all -p check:code check:other jest",
        "jest": "jest",
        "test:coverage": "rimraf ./coverage && jest --collectCoverage=true",
        "preversion": "node scripts/version.js",
        "publish:canary": "lerna publish --canary --force-publish=*",
        "publish:patch": "lerna publish patch --force-publish=*",
        "outdated": "npm outdated || true && lerna exec --no-bail -- npm outdated",
        "update": "lernaupdate",
        "dedupe": "lernaupdate --dedupe"
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint --ignore-path .gitignore --ignore-path .prettierignore --fix",
            "git add"
        ],
        "*.{md,css,scss,yaml,yml}": [
            "prettier --write",
            "git add"
        ],
        "*.svg": [
            "svgo --pretty --indent=2 --config=svgo.yml --multipass",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "ajv": "^6.4.0",
        "babel-cli": "^6.14.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.0.0",
        "babel-plugin-transform-decorators-legacy": "^1.3.5",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "coveralls": "^3.0.1",
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^15.1.0",
        "eslint-config-airbnb-base": "^12.0.0",
        "eslint-config-prettier": "^3.3.0",
        "eslint-plugin-babel": "^4.1.2",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jsx-a11y": "^5.1.1",
        "eslint-plugin-prettier": "^3.0.0",
        "eslint-plugin-react": "^7.3.0",
        "fs-extra": "^6.0.1",
        "husky": "^1.1.3",
        "istanbul": "^0.4.5",
        "istanbul-api": "1.2.2",
        "istanbul-reports": "1.1.4",
        "jest": "^22.4.3",
        "jest-environment-jsdom": "^22.4.3",
        "jest-environment-jsdom-global": "^1.0.3",
        "jest-extended": "^0.7.1",
        "lerna": "^3.13.1",
        "lerna-update-wizard": "^0.11.1",
        "lint-staged": "^9.2.0",
        "minami": "^1.2.3",
        "mocha": "^3.2.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.15.1",
        "resolve-cwd": "^2.0.0",
        "rimraf": "^2.6.2",
        "sass-lint": "^1.12.1",
        "semver": "^6.1.1"
    },
    "dependencies": {}
}
