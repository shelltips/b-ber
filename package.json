{
    "name": "@canopycanopycanopy/b-ber",
    "private": true,
    "license": "GPL-3.0-or-later",
    "engines": {
        "node": ">= 6.x <= 10.x",
        "npm": ">= 5.x <= 6.x"
    },
    "scripts": {
        "watch": "lerna run --parallel watch",
        "lint.js": "ls ./packages | xargs -I {} ./node_modules/.bin/eslint ./packages/{}/src/**/{*.js,*.jsx}",
        "lint.scss": "sass-lint -c .sasslintrc './packages/b-ber-themes/b-ber-theme-sans/scss/**/*.scss, ./packages/b-ber-themes/b-ber-theme-serif/scss/**/*.scss' -v -q",
        "lint": "npm run lint.js && npm run lint.scss",
        "lint.changed.js": "DIFF=`git diff-index --name-only HEAD | grep -E \".*\\.jsx?$\"`; if [ \"$DIFF\" ]; then ./node_modules/.bin/eslint $DIFF; fi",
        "lint.changed.scss": "DIFF=`git diff-index --name-only HEAD | grep -E \"packages.*\\.(scss|sass)$\"`; if [ \"$DIFF\" ]; then sass-lint -c .sasslintrc $DIFF -v -q; fi",
        "lint.changed": "npm run lint.changed.js && npm run lint.changed.scss",
        "prettier.check": "./node_modules/.bin/eslint --print-config . | ./node_modules/.bin/eslint-config-prettier-check",
        "flush.lock": "ls ./packages | xargs -I {} rimraf ./packages/{}/package-lock.json",
        "flush.modules": "ls ./packages | xargs -I {} rimraf ./packages/{}/node_modules",
        "flush.rebuild": "lerna exec npm install && lerna bootstrap",
        "flush": "npm run flush.lock && npm run flush.modules && npm run flush.rebuild",
        "test": "npm run lint && ./node_modules/.bin/jest",
        "test.coverage": "rimraf ./coverage && npm run lint && ./node_modules/.bin/jest --collectCoverage=true",
        "build": "lerna run build",
        "preversion": "node scripts/version.js",
        "publish.canary": "lerna publish --canary --force-publish=*",
        "publish.alpha": "lerna publish prepatch --force-publish=*",
        "outdated": "npm outdated || true && lerna exec --no-bail -- npm outdated",
        "update": "node_modules/.bin/lernaupdate",
        "dedupe": "node_modules/.bin/lernaupdate --dedupe"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint.changed",
            "pre-push": "./node_modules/.bin/jest"
        }
    },
    "devDependencies": {
        "ajv": "^6.4.0",
        "babel-cli": "^6.14.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.0.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "coveralls": "^3.0.1",
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^15.1.0",
        "eslint-config-airbnb-base": "^12.0.0",
        "eslint-config-prettier": "^3.3.0",
        "eslint-plugin-babel": "^4.1.2",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jsx-a11y": "^5.1.1",
        "eslint-plugin-prettier": "^3.0.0",
        "eslint-plugin-react": "^7.3.0",
        "fs-extra": "^6.0.1",
        "husky": "^1.1.3",
        "istanbul": "^0.4.5",
        "istanbul-api": "1.2.2",
        "istanbul-reports": "1.1.4",
        "jest": "^22.4.3",
        "jest-environment-jsdom": "^22.4.3",
        "jest-environment-jsdom-global": "^1.0.3",
        "jest-extended": "^0.7.1",
        "jsdoc": "^3.4.3",
        "jsdoc-strip-async-await": "^0.1.0",
        "lerna": "^3.13.1",
        "lerna-update-wizard": "^0.11.1",
        "minami": "^1.2.3",
        "mocha": "^3.2.0",
        "prettier": "^1.15.1",
        "resolve-cwd": "^2.0.0",
        "rimraf": "^2.6.2",
        "sass-lint": "^1.12.1",
        "semver": "^6.1.1"
    },
    "dependencies": {}
}
