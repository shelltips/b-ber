{
  "name": "b-ber-create",
  "version": "0.1.0-alpha.14",
  "description": "A command line epub maker.",
  "main": "./src/bber-cli/index.es6",
  "scripts": {
    "build": "BABEL_ENV=production ./node_modules/.bin/babel -d lib/ src/ --ignore **/__tests__/**",
    "bump": "npm version prerelease -m 'Version bump %s'",
    "coveralls": "NODE_ENV=test ./node_modules/.bin/istanbul cover --config .istanbul.yml ./node_modules/.bin/_mocha --report lcovonly -- --compilers js:./node_modules/babel-register $(find ./src -path \\*/__tests__/*.js -not -path \\*/helpers/*.js | tr \"\\r\\n\" \" \") && cat ./coverage/lcov.info | node_modules/.bin/coveralls && rm -rf ./coverage",
    "istanbul": "NODE_ENV=test ./node_modules/.bin/istanbul cover --config .istanbul.yml ./node_modules/.bin/_mocha -- -R spec --compilers js:./node_modules/babel-register $(find ./src -path \\*/__tests__/*.js -not -path \\*/helpers/*.js | tr \"\\r\\n\" \" \")",
    "mocha": "NODE_ENV=test ./node_modules/.bin/mocha -R spec --compilers js:./node_modules/babel-register $(find ./src -path \\*/__tests__/*.js -not -path \\*/helpers/*.js | tr \"\\r\\n\" \" \")",
    "lint": "./node_modules/.bin/eslint -c ../../.eslintrc './src/**/*.es6'",
    "prepublish": "NODE_ENV=production yarn test",
    "preversion": "NODE_ENV=production yarn test",
    "docs": "./node_modules/.bin/jsdoc --verbose -c .jsdoc.json",
    "start": "./node_modules/.bin/babel-node ./src/bber-cli/index.es6 --presets es2015,stage-0",
    "test": "yarn lint && yarn istanbul || true",
    "posttest": "if [ \"$NODE_ENV\" = production ]; then yarn build; fi"
  },
  "bin": {
    "bber": "./lib/bber-cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/triplecanopy/b-ber-creator.git"
  },
  "author": "Maxwell Simmer",
  "license": "MIT",
  "dependencies": {
    "ajv": "4.10.0",
    "autoprefixer": "^6.5.3",
    "b-ber-themes": "0.1.0-alpha.14",
    "b-ber-logger": "0.1.0-alpha.14",
    "css": "^2.2.1",
    "decompress": "^4.0.0",
    "epub-zipper": "^1.2.9",
    "express": "^4.14.0",
    "fs-extra": "^0.30.0",
    "html-minifier": "^3.5.3",
    "html-pdf": "^2.1.0",
    "htmlparser2": "^3.9.2",
    "js-yaml": "^3.9.0",
    "jshint": "^2.9.3",
    "layouts": "^0.13.2",
    "lodash": "^4.17.4",
    "markdown-it": "^8.3.1",
    "markdown-it-container": "^2.0.0",
    "markdown-it-front-matter": "^0.1.2",
    "mime-types": "^2.1.13",
    "mobi-zipper": "0.1.8",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "phantomjs-prebuilt": "^2.1.14",
    "postcss": "^5.2.6",
    "probe-image-size": "^3.1.0",
    "recursive-readdir": "^2.2.1",
    "request": "^2.81.0",
    "serve-index": "^1.8.0",
    "uglify-js": "^3.1.2",
    "vinyl": "^1.2.0",
    "xml2js": "^0.4.17",
    "yargs": "^6.6.0",
    "zousan": "https://github.com/msimmer/zousan"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "coveralls": "^2.12.0",
    "eslint": "3",
    "istanbul": "1.0.0-alpha.2",
    "jsdoc": "^3.4.3",
    "jsdoc-strip-async-await": "^0.1.0",
    "mocha": "^3.2.0",
    "pretty": "^2.0.0"
  }
}
